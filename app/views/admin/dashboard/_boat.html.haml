:javascript
  $(document).ready(function(){
    $.getJSON("http://api.flickr.com/services/feeds/photos_public.gne?jsoncallback=?", {tags: "sailboat,rowboat", tagmode: "any", format: "json"}, function(data){
      item = data.items[Math.floor(Math.random() * data.items.length)];
      $("#boat").attr("href", item.link)
      $("#boat").attr("title", item.title)
      $("#boat img").attr("src", item.media.m)
      $("#boat img").attr("alt", item.title)
    });
  });

